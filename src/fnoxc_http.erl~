-module(fnoxc_http).

-export([get/2,
	 post/3,
	 put/3,
	 delete/2]).

get(Url, Opts) ->
    Headers = build_header(Opts),
    Res = httpc:request(get, {Url, Headers}, [], []),
    io:format("Result: ~p~n", [Res]).

post(Url, Body, Opts) ->
    Headers = build_header(Opts),
    Res = httpc:request(post, {Url, Headers, "application/json", Body}, [], []),
    io:format("Result: ~p~n", [Res]).

put(Url, Body, Opts) ->
    Headers = build_header(Opts),
    Res = httpc:request(put, {Url, Headers, "application/json", Body}, [], []),
    io:format("Result: ~p~n", [Res]).

delete(Url, Opts) ->
    Headers = build_header(Opts),
    Res = httpc:request(delete, {Url, Headers}, [], []),
    io:format("Result: ~p~n", [Res]).

build_header(Opts) ->
    Token = maps:get(access_token, Opts),
    ClientSecret = maps:get(client_secret, Opts),
    [{"Access-Token", Token},
     {"Client-Secret", ClientSecret},
     {"Content-Type", "application/json"},
     {"Accept", "application/json"}].
